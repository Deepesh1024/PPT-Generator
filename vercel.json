{
  "version": 2,
  "functions": {
    "app.py": {
      "runtime": "python3.9",
      "maxDuration": 300,
      "memory": 1024
    }
  },
  "routes": [
    {
      "src": "/api/generate-ppt",
      "dest": "app.py",
      "methods": ["POST"]
    },
    {
      "src": "/api/status", 
      "dest": "app.py",
      "methods": ["GET"]
    },
    {
      "src": "/health",
      "dest": "app.py",
      "methods": ["GET"]
    },
    {
      "src": "/static/(.*)",
      "dest": "static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "GROQ_API_KEY": "@groq_api_key",
    "HF_TOKEN": "@hf_token"
  }
}
